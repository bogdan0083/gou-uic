html
    box-sizing border-box
    font-size: 14px
*, *:before, *:after
    box-sizing inherit

body
    color black
    font-size 1rem
    font-family 'Helvetica Neue Cyr', sans-serif
    font-weight 400
        
a
    text-decoration underline
    color inherit
    transition all 0.3s
    &:hover
        text-decoration none

.icon
    display inline-block
    vertical-align middle
    position relative
    background-color: transparent
    padding: 0
    border none
    &:before
        content ''
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        display block
        opacity: 0
        transition all 0.3s
    &:after
        content ''
        top 0
        left 0
        position: absolute
        opacity: 1
        transition all 0.3s
    + span
        display inline-block
        vertical-align middle

img
    max-width 100%

.nav-trigger-wrap
    float: left
    display: block
    +above($screen-sm)
        display: none

.nav-trigger
    margin: 0 auto
    hamburger-generator(18px, 2px, 4px)
    text-align center
    margin-top 15px
    position relative
    z-index 10
    &.active
        hamburger-animation()
    +above(880px)
        display none

.page-wrapper
    transition all 0.3s
    &.active
        transform translateX(200px)
        
.container
    padding 0 10px
    +above($screen-sm)
        padding: 0 15px

