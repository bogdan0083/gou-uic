.phone-block
	font-size 18px
	svg
		text-align: bottom

.mega-slider
	height: 474px
	overflow: hidden
	position: relative
	margin-top: 50px
	padding: 0
	color white
	.slide
		position: relative
		padding-top: 60px
		+above($screen-sm)
			padding-top: 40px
		&:before
			content ''
			position: absolute
			width: 100%
			height: 100%
			left: 0
			top: 0
			background: url(../images/mask.png) no-repeat center / 100% 100%
			display: block
			z-index: 1
	.container, .slick-slide, .slick-track, .slick-list, .wrapper
		height: 100%
	.slide-content
		background: url(../images/bloat.png) no-repeat center / 100% 100%
		padding 10px
		max-width 340px
		margin: 0 auto
		padding-top: 100px
		padding-bottom: 120px
		position: relative
		z-index: 3
		text-align: center
		+above($screen-sm)
			max-width 486px
			padding 60px
			text-align: left
			min-height: 400px
			margin-left: 50px
			padding-top: 80px
			padding-left: 90px
		h1
			font-size: 1.4rem
			font-weight: 200
			text-transform: uppercase
			line-height: 1.4
			span
				font-weight: 500
			+above($screen-sm)
				font-size 1.8rem
				line-height: 1.5
		.btn
			+above($screen-sm)
				float: right

.heading
	font-size: 1.5rem
	color $blue
	padding 10px 0
	position: relative
	line-height: 1.3
	&:before
		content ''
		position: absolute
		width: 474px
		height: 92px
		background: url(../images/bloat-gray.png) no-repeat center
		top 0
		left -70px
		display: none
	span
		position: relative
		z-index: 2
		&:after
			content ''
			width: 237px
			position: absolute
			height: 1px
			top 57px
			right -277px
			background-color: $blue
			display: none
	&-bg-white
		color white
		&:before
			background-image: url(../images/bloat-white.png)
	+above($screen-sm)
		font-size: 1.8rem
		margin-bottom: 60px
		&-bg-white
			color #848484
		span:after
			display: block
		&:before
			display: block
	+above($screen-md)
		font-size: 2.143rem

// ABOUT SIGNATURE

.about-signature
	aside
		+above($screen-sm)
			float: left
			width: 350px
		+above($screen-md)
			width: 460px
	.about-signature-image
		+above($screen-sm)
			margin-top: 50px
			width: 440px
			float: right
		+above($screen-md)
			margin-top: 50px
			width: auto
			position: relative
			&:before
				content ''
				width: 321px
				height: 164px
				position: absolute
				background: url(../images/electo-sign.png) no-repeat center
				left -197px
				bottom -59px
	.content
		line-height: 1.5
		margin-bottom: 20px
	.caption
		font-style: italic
		font-size 0.857rem
		color #999

// FEATURES AND TYPES

.features-and-types
	padding 20px 0
	svg
		fill $blue
	.tabs
		clearfix()
	.tab
		scandal()
		background-color: #f3f3f3
		text-decoration: none
		line-height: 1.4
		text-align: center
		padding 10px 0 20px
		display: table
		width: 100%
		font-size: 1.3rem
		color $blue
		clearfix()
		+above($screen-sm)
			width: 50%
			float: left
			padding: 0
			font-size 1.8rem
			text-transform: uppercase
			height: 122px
			line-height: 1.5
			background-color: $blue
			color white
			&:last-child
				.tab-content
					float: left
					padding-left: 40px
			.wrap
				display: table-cell
				vertical-align: middle
			.tab-content
				max-width: 515px
				width: 100%
				float: right
				position: relative
				top -10px
				text-align: left
		&.js-active
			background-color: #f3f3f3
			color $blue

.features
	padding 20px 0
.features-row
	text-align: center
.feature
	text-align: center
	font-weight: 700
	color #999
	text-transform: uppercase
	max-width: 230px
	margin: 20px auto
	p
		line-height: 1.5
	+above($screen-sm)
		display: inline-block
		vertical-align: top
		margin 20px 12px
		.feature-icon
			height: 100px
			position: relative
			> svg
				position: absolute
				margin auto
				bottom: 0
				top: 0
				left: 0
				right: 0

// SIGNATURE TYPES

.signature-types
	text-align: center
	padding 30px 0
	line-height: 1.5
	h4
		font-size 1.286rem
		text-transform: uppercase

.custom-list
	line-height: 1.5
	margin 30px 0
	text-align: left
	list-style none
	padding: 0
	li
		margin 8px 0
		
.consult-offer
	background-color: $blue
	color white
	padding-bottom: 20px
	&-top
		position: relative
	+above($screen-sm)
		padding-bottom: 40px
	&-form
		+above($screen-sm)
			text-align: right
	.form-group
		+above($screen-md)
			margin 0 30px
	.field-wrap
		vertical-align: middle
		+above($screen-sm)
			display: inline-block
	.btn
		width: 100%
		display: block
		+above($screen-sm)
			display: inline-block
			width: auto
			vertical-align: middle
		+above($screen-md)
			margin-left: 10px
	.caption
		line-height: 1.5
		width: 290px
		+above($screen-sm)
			position: absolute
			right 0
			top 15px
			text-align: right

// SIGNATURE STEPS

.signature-steps
	.col-md-3:last-child
		.signature-step:after
			display: none

.signature-step
	max-width 170px
	position: relative
	min-height: 200px
	margin: 10px auto
	+above($screen-md)
		margin: 20px 0
	&:after
		content ''
		width: 27px
		height: 18px
		position: absolute
		right -23%
		top: 30px
		background: url(../images/arr-right.png) no-repeat center
		display: none
		+above($screen-md)
			display: block
	svg
		fill $blue
	.step-count
		position: relative
		svg
			position: absolute
			left: 60px
			top 0
		span
			display: block
			font-size: 5rem
			line-height: 0.7
		div
			font-size 1.643rem
			text-transform: uppercase
			line-height: 1.7

// ORDER

.order
	padding 30px 0
	background-color: $blue
	
		
	&-block
		max-width: 500px
		margin 10px auto
		background-color: white
		padding 30px 30px 20px
		min-height: 362px
		background-position: center
		background-size cover
		background-repeat: no-repeat
		+between(0, $screen-sm)
			background: white
		h3
			font-size 1rem
			text-transform: uppercase
			font-weight: 400
			margin-top: 0
			line-height: 1.5
			+above($screen-sm)
				font-size: 1.286rem
		h4
			font-size 1.286rem
			text-transform: uppercase
			font-weight: 400
			line-height: 1.5
			color $blue
			margin-bottom: 6px
		.custom-list
			min-height: 170px
			margin-top: 20px
		&-bottom
			text-align: center
			.btn, .price-wrap
				width: 100%
				margin 10px 0
				+above($screen-md)
					width: auto
					margin 10px 6px
			.price-wrap
				+above($screen-md)
					width: 146px
.price-wrap
	position: relative
	color black
	display: inline-block
	text-align: center
	width: 146px
	padding-left: 48px
	vertical-align: middle
	.price
		line-height: 40px
		height: 40px
		text-align: center
		background-color: $gray
		font-size 1.286rem
		span
			display: inline-block
			vertical-align: middle
			margin-right: 3px
	&:before
		content ''
		height: 40px
		left: 0
		top: 0
		background: $gray url(../images/label.png) no-repeat center
		width: 46px
		position: absolute

// BUSINESS SERVICES

.business-services
	padding 30px 0
.business-service
	margin 20px 0
	padding 10px
	line-height: 1.5
	position: relative
	background-color: #f3f3f3
	img
		margin-bottom: 10px
		+above($screen-sm)
			position: absolute
			right: 20px
			top 64px
	+above($screen-sm)
		width: 50%
		min-height: 300px
		padding 30px 20px 10px 30px
		float: left
		margin: 0
	p
		+above($screen-sm)
			min-height: 140px
		+above($screen-md)
			padding-right: 100px
	h3
		text-transform: uppercase
		font-weight: 400
		margin-top: 0
	h3, p
		position: relative
		z-index: 1
	.btn
		+above($screen-sm)
			float: right
	&:nth-child(3n+1)
		color white
		background-color: $blue
		.btn
			background-color: #fff
			color $blue

.specials
	padding 20px 0
	background-color: #f3f3f3
	+above($screen-sm)
		padding 10px 0 70px
	&-group
		clear both
	&-all-link
		display: block
		margin 10px 0
		+above($screen-sm)
			float: right
	.row
		margin 0 -7px
		> div
			padding-left: 7px
			padding-right: 7px
.special
	display: block
	max-width: 335px
	margin: 10px auto
	height: 200px
	position: relative
	&:hover .bg
		opacity: 1
	&-text
		position: absolute
		height: 90px
		bottom 0
		left 0
		color white
		background: url(../images/bloat-blue.png) no-repeat 0 0
		width: 100%
		font-size 1.286rem
		padding-right: 30px
		line-height: 1.5
		padding-left: 10px
		display: table
		padding-top: 0
		padding-bottom: 0
		.inner
			vertical-align: middle
			display: table-cell
	.bg
		position: absolute
		left: 0
		top: 0
		width: 100%
		height: 100%
		transition all 0.3s
		opacity: 0.7

// NEWS!

.news
	padding 20px 0 60px
	background: url(../images/texture.png) repeat-x bottom center
	.img-aside
		display: none
		+above($screen-sm)
			display: block
			float: left
			margin-right: 30px
	.content
		overflow: hidden
		p
			font-size 0.857rem
			margin-top: 0
		a
			display: inline-block
		h3
			font-size 1.286rem
			font-weight: 400
			text-transform: uppercase
			line-height: 1.4
			margin-top: 6px
			margin-bottom: 3px
			color $blue
		+above($screen-sm)
			min-height: 343px
			position: relative
			padding-bottom: 30px
			.other-news-link
				position: absolute
				padding-left: 10px
				right 0
				bottom 0

.map-wrapper
	position: relative
	height: 526px
	padding-top: 68px
	.icon-wrap
		position: relative
		width: 25px
		text-align: center
		display: inline-block
		margin-right: 25px
		vertical-align: middle
		.icon
			margin: 0
	.map-info-block
		margin 30px 0 30px 20px
		padding-left 50px
		position: relative
		.icon-wrap
			position: absolute
			left: 0
			height: 100%
			width: 25px
			.icon
				position: absolute
				margin auto
				top: 0
				bottom: 0
				left: 0
				right: 0
	.map-content
		margin: 0 auto
		position: relative
		z-index: 2
		color white
		max-width 486px
		height: 397px
		background: url("../images/bloat.png") no-repeat center / 100% 100%
		padding 50px
		h2
			margin-top: 0
			font-weight: 1rem
			line-height: 1.5
			margin-bottom: 0
			scandal()
			+above($screen-sm)
				font-size: 1.5rem
				margin-bottom: 40px
		+above($screen-sm)
			padding 70px 70px 30px 80px
			float: right
	#map
		background-color: gray
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 100%

